<% if is_blog_article? %>
<% wrap_layout :layout do %>
<h1><%= current_article.title %></h1>
<h3>Posted <%= current_article.date.strftime('%B %e, %Y') %></h3>
<%= yield %>
<ul><strong>Tags:</strong>
	<% current_article.tags.each do |tag| %>
	<a href="/blog/tags/<%= tag %>/" class="tag"><%= tag %></a>
	<% end %>
</ul>

<% end %>
<% end %>